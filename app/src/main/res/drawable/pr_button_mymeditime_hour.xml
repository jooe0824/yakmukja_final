<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#222222" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="100dp" android:height="120dp" />
            <stroke android:width="1dp" android:color="#00ff" />
            <solid android:color ="#CBCCCC" />
            <padding android:bottom="1dp" />
        </shape>
    </item>
</selector>